@model Project.Models.THUONGHIEU

@{
    ViewBag.Title = "XoaThuongHieu";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .wrap {
        padding: 2% 10%;
        background-color: #f4f5f7;
        border-radius: 8px;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    /* Tiêu đề */
    h2 {
        text-align: center;
        color: #444;
        font-weight: 600;
        margin-bottom: 20px;
    }

    /* Danh sách thông tin */
    dl.dl-horizontal {
        margin-left: 0;
        margin-right: 0;
        text-align: center;
    }

    dt {
        font-size: 16px;
        font-weight: 600;
        color: #333;
    }

    dd {
        font-size: 16px;
        color: #555;
        margin-bottom: 20px;
    }

    /* Nút Xóa và Trở về */
    .action-buttons {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 20px;
        margin-top: 30px;
    }

    .btn-submit, .back-link a {
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 5px;
        display: inline-block;
        text-align: center;
        transition: all 0.3s ease;
    }

    .btn-submit {
        background-color: #e74c3c;
        color: white;
        border: none;
        cursor: pointer;
        flex-shrink: 0;
    }

        .btn-submit:hover {
            background-color: #f29898;
            color: black;
        }

    .back-link a {
        color: #4CAF50;
        text-decoration: none;
        border: 1px solid #4CAF50;
    }

        .back-link a:hover {
            color: forestgreen;
            border-color: forestgreen;
        }
</style>

<div class="wrap">
    <div>
        <h2>XÁC NHẬN XÓA THÔNG TIN THƯƠNG HIỆU</h2>
        <br />
        <p style="text-align:center">Bạn quyết định xóa thương hiệu này?</p>
        <br />
        <dl class="dl-horizontal">
            <p>Tên thương hiệu <span style="color: red">  @Html.DisplayFor(model => model.TenThuongHieu)</span></p>
        </dl>

        <div class="action-buttons">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <input type="submit" value="Xóa" class="btn-submit" />
            }

            <div class="back-link">
                @Html.ActionLink("Quay lại", "ThuongHieu")
            </div>
        </div>
    </div>
</div>
