@model Project.Models.SANPHAM

@{
    ViewBag.Title = "XoaSanPham";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .wrap {
        padding: 3% 8%;
        background-color: #f9f9f9;
        border-radius: 10px;
/*        box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);*/
        margin-bottom: 30px;
        max-width: 900px;
        margin-left: auto;
        margin-right: auto;
    }

    h2.title {
        text-align: center;
        font-size: 26px;
        color: #333;
        margin-bottom: 30px;
    }

    .info-container {
        display: flex;
        justify-content: space-between;
        gap: 30px;
    }

    .info-box {
        flex: 1;
/*        background-color: #ffffff;*/
        padding: 20px;
        border-radius: 8px;
/*        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.05);*/
    }

    dl dt {
        font-weight: bold;
        font-size: 16px;
        color: #555;
        margin-bottom: 10px;
    }

    dl dd {
        margin-bottom: 15px;
        font-size: 16px;
        color: #333;
    }

    .form-actions {
        display: flex;
        gap: 20px;
        margin-top: 30px;
        justify-content: center;
    }

    .btn-danger {
        background-color: #e74c3c;
        color: white;
        padding: 10px 30px;
        border-radius: 5px;
        border: none;
        cursor: pointer;
        font-size: 16px;
    }

        .btn-danger:hover {
            background-color: #c0392b;
        }

    .back-link {
        color: #007bff;
        text-decoration: none;
        font-weight: 600;
        padding: 10px 30px;
        border-radius: 5px;
        background-color: #f0f0f0;
        border: 1px solid #ddd;
        cursor: pointer;
    }

        .back-link:hover {
            background-color: #e0e0e0;
        }

    img.product-image {
        width: 150px;
        border-radius: 8px;
        margin-bottom: 15px;
    }
</style>

<div class="wrap">
    <h2 class="title">XÁC NHẬN XÓA THÔNG TIN SẢN PHẨM</h2>
    <div class="info-container">
        <div class="info-box">
            <dl>
                <dt>Tên giày:</dt>
                <dd>@Html.DisplayFor(model => model.TenGiay)</dd>

                <dt>Giá bán:</dt>
                <dd>@String.Format("{0:0,0}", Model.GiaBan) VNĐ</dd>

                <dt>Thương Hiệu:</dt>
                <dd>@Html.DisplayFor(model => model.THUONGHIEU.TenThuongHieu)</dd>

                <dt>Loại Giày:</dt>
                <dd>@Html.DisplayFor(model => model.LOAIGIAY.TenLoai)</dd>
            </dl>
        </div>
        <div class="info-box">
            <dl>
                <dt>Ảnh bìa:</dt>
                <dd><img src="@Url.Content("~/images/" + Model.AnhBia)" class="product-image" /></dd>

                <dt>Thời Gian Bảo Hành:</dt>
                <dd>@Html.DisplayFor(model => model.ThoiGianBaoHanh) Tháng</dd>

                <dt>Số Lượng tồn:</dt>
                <dd>@Html.DisplayFor(model => model.SoLuongTon)</dd>
            </dl>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions">
            <input type="submit" value="Xóa" class="btn btn-danger" />
            <a href="@Url.Action("SanPham")" class="back-link">Trở về trang sản phẩm</a>
        </div>
    }
</div>
