@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    /* Phong cách container chính */
    .password-container {
        width: 400px;
        margin: 50px auto;
        padding: 40px;
        background-color: #f9f9f9;
        border-radius: 15px;
        border: 1px solid #ddd;
    }

        .password-container h2 {
            text-align: center;
            color: #007bff;
            margin-bottom: 30px;
        }

    /* Phong cách form */
    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            font-size: 16px;
            color: #333;
            margin-bottom: 5px;
            display: block;
        }

        .form-group input[type="password"] {
            width: 100%;
            padding: 12px;
            font-size: 16px;
            border-radius: 10px;
            border: 1px solid #ccc;
        }

    /* Phong cách nút */
    .action-buttons {
        text-align: center;
    }

        .action-buttons input[type="submit"],
        .action-buttons input[type="reset"] {
            background-color: #007bff;
            border: none;
            color: white;
            padding: 12px 30px;
            margin: 10px;
            font-size: 16px;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

            .action-buttons input[type="submit"]:hover,
            .action-buttons input[type="reset"]:hover {
                background-color: #0056b3;
                transform: scale(1.05);
            }
</style>

<div class="password-container">
    <h2>ĐỔI MẬT KHẨU</h2>

    @using (Html.BeginForm())
    {
        <div class="form-group">
            <label for="txt_Password">Mật khẩu hiện tại</label>
            <input type="password" id="txt_Password" name="txt_Password" required title="Mật khẩu hiện tại của bạn tối thiểu có 6 ký tự và không được nhập ký tự đặc biệt !" />
        </div>

        <div class="form-group">
            <label for="txt_PasswordNew">Mật khẩu mới</label>
            <input type="password" id="txt_PasswordNew" name="txt_PasswordNew" required title="Mật khẩu mới của bạn tối thiểu có 6 ký tự và không được nhập ký tự đặc biệt !" />
        </div>

        <div class="form-group">
            <label for="txt_NhapLaiPass">Xác nhận mật khẩu</label>
            <input type="password" id="txt_NhapLaiPass" name="txt_NhapLaiPass" required title="Mật khẩu nhập lại của bạn tối thiểu có 6 ký tự và không được nhập ký tự đặc biệt !" />
        </div>

        <div class="action-buttons">
            <input type="reset" value="Nhập lại" />
            <input type="submit" value="Xác nhận" />
        </div>
    }
</div>
