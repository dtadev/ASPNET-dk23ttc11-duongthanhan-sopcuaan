@using Project.Models
@using PagedList.Mvc
@model PagedList.PagedList<Project.Models.THUONGHIEU>
@{
    ViewBag.Title = "ThuongHieu";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    /* Định dạng toàn trang */
    .wrap {
        padding-top: 2%;
        padding-left: 10%;
        padding-right: 10%;
        padding-bottom: 5%;
        background-color: #f4f5f7;
        border-radius: 8px;
    }

    /* Tiêu đề */
    h2 {
        text-align: center;
        color: #444;
        font-weight: 600;
        margin-bottom: 20px;
    }

    /* Nút thêm thương hiệu */
    .button {
        background-color: #4CAF50;
        border: none;
        color: white;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin-bottom: 20px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .button:hover {
            background-color: #45a049;
        }

    /* Bảng */
    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        background-color: white;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
    }

        .table th, .table td {
            padding: 12px;
            text-align: center;
            border-bottom: 1px solid #ddd;
            font-size: 14px;
        }

        .table th {
            background-color: #333;
            color: white;
            font-weight: 600;
        }

        .table td {
            color: #444;
        }

        .table tr:hover {
            background-color: #f2f2f2;
        }

    /* Phần phân trang */
    .MenuTrang {
        text-align: center;
        margin-top: 20px;
    }

        .MenuTrang .pagination {
            display: inline-flex;
            list-style: none;
            padding-left: 0;
            border-radius: 0.25rem;
        }

            .MenuTrang .pagination li {
                margin: 0 5px;
            }

            .MenuTrang .pagination a {
                color: #007bff;
                padding: 8px 16px;
                text-decoration: none;
                border-radius: 4px;
                font-size: 14px;
            }

                .MenuTrang .pagination a:hover {
                    background-color: #ddd;
                }

    .back-button {
        background-color: #ddd;
        color: black;
        padding: 5px 10px;
        border-radius: 5px;
        text-decoration: none;
        font-size: 12px;
        text-align: center;
        display: inline-block;
        margin: 0 auto;
    }

    .back-button-sua:hover {
        background-color: #faf260;
        color: #000;
    }

    .back-button-xoa:hover {
        background-color: #ff7c7c;
        color: #fff;
    }
</style>

<link href="~/Content/PagedList.css" rel="stylesheet" />

<div class="wrap">
    <h2>QUẢN LÝ THÔNG TIN THƯƠNG HIỆU</h2>

    <!-- Nút Thêm Thương Hiệu -->
    <a href="@Url.Action("ThemMoiThuongHieu", "Admin")" class="button">THÊM THƯƠNG HIỆU MỚI</a>

    <!-- Bảng Thương Hiệu -->
    <table class="table">
        <thead>
            <tr>
                <th>Mã</th>
                <th>Tên thương hiệu</th>
                <th width="200px">Thao tác</th>
             
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.MaThuongHieu)</td>
                    <td>@Html.DisplayFor(modelItem => item.TenThuongHieu)</td>
              
                    <td>

                        @Html.ActionLink("Sửa", "SuaThuongHieu", new { id = item.MaThuongHieu }) |
                        @Html.ActionLink("Xóa", "XoaThuongHieu", new { id = item.MaThuongHieu })
                    </td>

                 
                </tr>
            }
        </tbody>
    </table>

    <!-- Phân Trang -->
    <div class="MenuTrang">
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
        @Html.PagedListPager(Model, page => Url.Action("ThuongHieu", new { page }))
    </div>
</div>
