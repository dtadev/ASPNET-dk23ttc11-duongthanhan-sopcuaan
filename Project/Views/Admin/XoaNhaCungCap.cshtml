@model Project.Models.NHACUNGCAP

@{
    ViewBag.Title = "XoaNhaCungCap";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .wrap {
        padding: 2% 5%;
        background-color: #f4f5f7;
        border-radius: 8px;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    h2 {
        text-align: center;
        color: #444;
        font-weight: 600;
        margin-bottom: 15px;
    }

    h3 {
        text-align: center;
        color: #555;
        margin-bottom: 25px;
        font-size: 18px;
    }

    dl {
        width: 100%;
        max-width: 800px;
        background-color: transparent;
        padding: 20px;
        border-radius: 8px;
        font-size: 16px;
        border: 1px solid #ddd; /* Thêm viền mỏng cho dl */
    }

    dt {
        font-weight: 600;
        color: #333;
        margin-bottom: 10px;
    }

    dd {
        margin-bottom: 20px;
        font-weight: 400;
        color: #555;
        padding-left: 15px;
    }

    .button-group {
        display: flex;
        justify-content: center; /* Căn giữa các nút */
        gap: 20px;
        margin-top: 30px; /* Tăng khoảng cách giữa danh sách và nút */
    }

    .btn-delete, .btn-back {
        padding: 10px 30px;
        font-size: 16px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
        text-decoration: none;
        text-align: center;
        min-width: 150px;
    }

    .btn-delete {
        background-color: #e74c3c;
        color: white;
    }

        .btn-delete:hover {
            background-color: #c0392b;
        }

    .btn-back {
        background-color: #4CAF50;
        color: white;
    }

        .btn-back:hover {
            background-color: #45a049;
        }
</style>

<div class="wrap">
    <h2>XÁC NHẬN XÓA THÔNG TIN NHÀ CUNG CẤP</h2>
    <h3>Bạn có chắc chắn muốn xóa nhà cung cấp này?</h3>

    <dl>
        <dt>Tên nhà cung cấp:</dt>
        <dd>@Html.DisplayFor(model => model.TenNCC)</dd>

        <dt>Địa chỉ:</dt>
        <dd>@Html.DisplayFor(model => model.DiaChi)</dd>

        <dt>Số điện thoại:</dt>
        <dd>@Html.DisplayFor(model => model.DienThoai)</dd>

        <dt>Trạng thái:</dt>
        <dd>@Html.DisplayFor(model => model.TrangThai)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="button-group">
            <button type="submit" class="btn-delete">Xóa</button>
            <a href="@Url.Action("NhaCungCap", "Admin")" class="btn-back">Quay lại</a>
        </div>
    }
</div>
