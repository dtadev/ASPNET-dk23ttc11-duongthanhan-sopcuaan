<!DOCTYPE html>
<html lang="en">
<head>
    <title>Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
        }

        .sidebar {
            width: 260px;
            background-color: #1f2937;
            color: #ffffff;
            position: fixed;
            top: 0;
            bottom: 0;
            overflow-y: auto;
            padding-top: 20px;
            box-shadow: 2px 0 10px rgba(0,0,0,0.2);
        }

            .sidebar ul {
                list-style-type: none;
                padding: 0;
            }

                .sidebar ul li {
                    padding: 15px 20px;
                    border-bottom: 1px solid #374151;
                }

                    .sidebar ul li a {
                        color: #ffffff;
                        text-decoration: none;
                        display: block;
                        font-weight: 500;
                    }

                        .sidebar ul li a:hover {
                            background-color: #374151;
                            border-radius: 8px;
                        }

                    .sidebar ul li.has-sub > ul {
                        display: none;
                        padding-left: 20px;
                    }

                    .sidebar ul li.has-sub:hover > ul {
                        display: block;
                    }

        .content-wrapper {
            margin-left: 260px;
            padding: 30px;
            background-color: #ffffff;
            min-height: 100vh;
            box-shadow: 0 0 10px rgba(0,0,0,0.05);
        }

        .footer {
            text-align: center;
            padding: 20px;
            background-color: #1f2937;
            color: #ffffff;
            margin-top: 30px;
            border-radius: 8px;
        }

        .dropdown {
            margin-top: 20px;
            border-top: 2px solid #555;
            padding-top: 15px;
        }

            .dropdown .dropbtn {
                background-color: #1f2937;
                color: #fff;
                padding: 10px 20px;
                border: none;
                cursor: pointer;
                border-radius: 8px;
                font-weight: 600;
                width: 100%;
                text-align: left;
            }

        .dropdown-content {
            display: none;
            background-color: #FFFFFF;
            box-shadow: 0 8px 16px rgba(0,0,0,0.15);
            min-width: 200px;
            border-radius: 8px;
            overflow: hidden;
            margin-top: 10px;
        }

            .dropdown-content a {
                padding: 12px 16px;
                color: #333;
                text-decoration: none;
                display: block;
                transition: background-color 0.3s ease;
            }

                .dropdown-content a:hover {
                    background-color: #f4f4f4;
                }

        .dropdown:hover .dropdown-content {
            display: block;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <ul>
            <li><a href="@Url.Action("Index", "Admin")"><i class="fas fa-home"></i> Trang Chủ</a></li>
            <li><a href="@Url.Action("Sanpham", "Admin")"><i class="fa-brands fa-product-hunt"></i> Quản Lý Sản phẩm</a></li>
            <li><a href="@Url.Action("ThuongHieu", "Admin")"><i class="fa-solid fa-copyright"></i> Quản Lý Thương Hiệu</a></li>
            <li><a href="@Url.Action("NhaCungCap", "Admin")"><i class="fa-solid fa-truck-fast"></i> Quản Lý Nhà Cung Cấp</a></li>
            <li><a href="@Url.Action("LoaiGiay", "Admin")"><i class="fa-solid fa-filter"></i> Quản Lý Loại Giày</a></li>
            <li><a href="@Url.Action("Order", "Admin")"><i class="fas fa-shopping-cart"></i> Quản Lý Đơn Hàng</a></li>
            <li><a href="@Url.Action("KhachHang", "Admin")"><i class="fas fa-users"></i> Quản Lý Khách Hàng</a></li>
            <li><a href="/Admin/Logout">Đăng xuất</a></li>
            
        </ul>
        @*<div class="dropdown">
            <button class="dropbtn">Admin &#x2193</button>
            <div class="dropdown-content">
                <a href="/Admin/Account">Thông tin</a>
                <a href="/Admin/ChangePassword">Đổi mật khẩu</a>
     
            </div>
        </div>*@
    </div>

    <div class="content-wrapper">
        @RenderBody()
        <div class="footer">
            © All rights reserved | Sốp Giày Của An
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>