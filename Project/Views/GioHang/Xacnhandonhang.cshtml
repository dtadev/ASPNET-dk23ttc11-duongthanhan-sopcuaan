
@{
    ViewBag.Title = "Xacnhandonhang";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
    var taikhoan = Session["TaiKhoan"] as Project.Models.KHACHHANG;
    var donhang = Session["DONHANG"] as Project.Models.DONHANG;
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
        margin: 0;
        padding: 0;
    }

    .confirmation-container {
        max-width: 700px;
        margin: 80px auto;
        padding: 30px 40px;
        background-color: #ffffff;
        border-radius: 10px;
        text-align: center;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.08);
    }

        .confirmation-container h2 {
            font-size: 28px;
            color: #333333;
            margin-bottom: 20px;
            font-weight: 700;
        }

        .confirmation-container p {
            font-size: 18px;
            color: #555555;
            margin-bottom: 30px;
        }

        .confirmation-container a {
            font-size: 18px;
            color: #ffffff;
            background-color: #007bff;
            padding: 12px 30px;
            border-radius: 5px;
            text-decoration: none;
            display: inline-block;
        }

            .confirmation-container a:hover {
                background-color: #0056b3;
            }
</style>

<div class="confirmation-container">
    <h2>Cảm ơn @taikhoan.HoTen đã đặt hàng thành công </h2>
    <p>
        Đơn hàng của bạn đã được ghi nhận. <br />
        Chúng tôi sẽ liên hệ và giao hàng trong thời gian sớm nhất.
    </p>
    <a href="@Url.Action("Index", "Home")">VỀ TRANG CHỦ</a>
</div>
