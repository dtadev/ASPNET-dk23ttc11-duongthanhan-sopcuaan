@model Project.Models.KHACHHANG

@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
    var item = Model;
}


<style>
    .login .wrap {
        width: 90%;
        max-width: 600px;
        margin: 40px auto;
        background: #ffffff;
        padding: 30px 40px;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    }

    .login-title h4.title {
        font-size: 1.8em;
        color: #333;
        margin-bottom: 20px;
        text-align: center;
    }

    form p {
        margin-bottom: 20px;
    }

    form label {
        font-weight: 600;
        color: #555;
        margin-bottom: 5px;
        display: block;
    }

    form span {
        color: #f00;
        margin-left: 5px;
    }

    .form-control {
        width: 100%;
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 8px;
        margin-top: 5px;
        font-size: 0.9em;
        color: #333;
        transition: border-color 0.3s;
    }

        .form-control:focus {
            border-color: #4CAF50;
            outline: none;
        }

    input[type="submit"] {
        background-color: #4CAF50;
        color: #fff;
        border: none;
        padding: 12px 20px;
        font-size: 1em;
        cursor: pointer;
        border-radius: 8px;
        transition: background-color 0.3s;
        width: 100%;
        margin-top: 10px;
    }

        input[type="submit"]:hover {
            background-color: #4CAF50;
        }

    #Error, #Success {
        color: #f00;
        margin-top: 15px;
        text-align: center;
        font-weight: 600;
    }

    #Success {
        color: #4CAF50;
    }
</style>



<div class="login">
    <div class="wrap">
        @using (Html.BeginForm(new { strURL = Request.Url.ToString() }))
        {
            Html.AntiForgeryToken();

            <div class="login-title">
                <h4 class="title">Thay đổi mật khẩu</h4>
                <div class="comments-area">
                    <form>
                        <p>
                            <label>Nhập mật khẩu cũ<span>*</span></label>
                            <input type="password" class="form-control" id="oldPassword" name="oldPassword" placeholder="Mật khẩu cũ" />
                        </p>
                        <p>
                            <label>Nhập mật khẩu mới<span>*</span></label>
                            <input type="password" class="form-control" id="newPassword" name="newPassword" placeholder="Mật khẩu mới">
                        </p>
                        <p>
                            <label>Nhập lại mật khẩu<span>*</span></label>
                            <input type="password" class="form-control" id="confirmNewPassword" name="confirmNewPassword" placeholder="Nhập lại mật khẩu mới">
                        </p>
                        <p>
                            <input type="submit" value="Lưu">
                        </p>
                        <h3 id="Error">@ViewData["Error"]</h3>
                        <h3 id="Success">@ViewData["Success"]</h3>
                    </form>
                </div>
            </div>
        }

        <div class="clear"></div>

    </div>
</div>