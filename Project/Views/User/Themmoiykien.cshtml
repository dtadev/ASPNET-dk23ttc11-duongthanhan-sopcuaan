@model Project.Models.YKIENKHACHHANG

@{
    ViewBag.Title = "Themmoiykien";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<style>
    body {
        font-family: Arial, Helvetica, sans-serif;
    }

    * {
        box-sizing: border-box;
    }

    input[type=text], select, textarea {
        width: 100%;
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        margin-top: 6px;
        margin-bottom: 16px;
        resize: vertical;
    }

    input[type=submit] {
        background-color: #04AA6D;
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        input[type=submit]:hover {
            background-color: #45a049;
        }

    .container {
        border-radius: 5px;
        background-color: #f2f2f2;
        padding: 20px;
    }

    .thanhvien {
        margin: 0 200px 10px 200px;
    }

        .thanhvien h3 {
            font-weight: bold;
            font-size: 17px;
        }


    .contact-info {
        margin-top: 30px;
        background-color: #ffffff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

        .contact-info h2 {
            font-size: 22px;
            font-weight: bold;
            margin-bottom: 15px;
        }

        .contact-info p {
            font-size: 16px;
            line-height: 1.6;
            color: #555;
        }

        .contact-info .highlight {
            font-weight: bold;
            color: #4CAF50;
        }
</style>


<!-- Thông tin liên hệ -->
<div class="contact-info" style="margin: 30px 200px 30px;">
    <h2>SỐP GIÀY CỦA AN</h2>
    <p><span class="highlight">GPKD số:</span>100009312</p>
    <p><span class="highlight">Email:</span> admin@shopgiay.com</p>
    <p><span class="highlight">Số điện thoại:</span> +84 123 456 789</p>
    <p><span class="highlight">Địa chỉ:</span> 123 Đường ABC, Huyện Bến Lức, Tỉnh Long An, Việt Nam</p>
</div>



<h1 style="font-size: 30px; margin: 20px 0 20px 200px; font-weight: bold ">Đóng góp ý kiến</h1>

<div class="container" style=" margin: 0 200px 20px 200px;">
    <br />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">

            <h3 style="font-size: 20px; font-weight: bold ; text-align: center">ĐÓNG GÓP Ý KIẾN CỦA BẠN</h3>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <h1>Email</h1>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h1>Họ tên</h1>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h1>Nội dung</h1>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NoiDung, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NoiDung, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="GỬI" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>





